<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laptop Details</title>
    <link rel="stylesheet" href="getLaptop.css">
</head>
<body>
    <h1>Laptop Details</h1>
    <table>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Processor</th>
            <th>RAM</th>
            <th>Storage</th>
            <th>Price</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
        <!-- Loop through laptop data -->
        <% laptops.forEach(function(laptop) { %>
            <tr>
                <td><%= laptop.brand %></td>
                <td><%= laptop.model %></td>
                <td><%= laptop.processor %></td>
                <td><%= laptop.ram %></td>
                <td><%= laptop.storage %></td>
                <td><%= laptop.price %></td>
                <td><%= laptop.availability ? 'Available' : 'Not Available' %></td>
                <td>
                    <button onclick="updateLaptop('<%= laptop.id %>')">Update</button>
                    <button onclick="deleteLaptop('<%= laptop.id %>')">Delete</button>
                </td>
            </tr>
        <% }); %>
    </table>
    <script>
        function updateLaptop(laptopId) {
            // Redirect to the updateLaptop.ejs view with the laptop ID as a query parameter
            window.location.href = `/updateLaptop?laptopId=${laptopId}`;
        }

        function deleteLaptop(laptopId) {
            // Display a confirmation dialog
            if (confirm("Are you sure you want to delete this laptop?")) {
                // If the user confirms, redirect to the deleteLaptop.ejs view with the laptop ID as a query parameter
                window.location.href = `/deleteLaptop?laptopId=${laptopId}`;
            }
        }
    </script>
</body>
</html>
